@model List<webdev.Models.Link>

<button>
    @Html.ActionLink("Add new link", "Add", "Link")
</button>

<div>
    <table>
        @foreach(var item in Model) {
            <tr>
                <td><strong>@Html.DisplayNameFor(model => item.FullLink):</strong></td>
                <td>@Html.DisplayFor(model => item.FullLink),</td>
                <td><strong>@Html.DisplayNameFor(model => item.ShortLink):</strong></td>
                <td>@Html.ActionLink(item.ShortLink, "RedirectUrl", "ShortLink", new {link = item.ShortLink}, new {target="_blank"})</td>
                <td>| @Html.DisplayFor(model => item.Id)</td>
                <td>| @Html.ActionLink("Delete", "Delete", "Link", item)</td>
                <td>| @Html.ActionLink("Edit", "Edit", "Link", item)</td>
            </tr>
        }
    </table>
</div>